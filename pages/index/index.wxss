/**index.wxss**/
/* 搜索框 */

page {
  background: #f1f1f1;
  padding-bottom: 200rpx;
  padding-top: 100rpx;
}

.nav_img {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
  width: 100%;
  height: 100rpx;
  display: block;
}

.searchBox {
  background: white;
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #e5e5e5;
}

.addressbox {
  float: left;
  height: 66rpx;
  line-height: 66rpx;
  font-size: 32rpx;
}

.searchInput {
  position: relative;
  width: calc(100% - 40rpx);
  height: 46rpx;
  padding: 10rpx 20rpx;
  border: 1px solid #ccc;
  border-radius: 50rpx;
  background: #f1f1f1;
  margin-top: 30rpx;
  /* box-shadow: 0 0 5px #ccc; */
}

.searchInput input {
  height: 46rpx;
  width: 80%;
  padding-left: 55rpx;
}

.placeholder {
  line-height: 46rpx;
  font-size: 30rpx;
}

.searchIcon {
  position: absolute;
  z-index: 2;
  top: 14rpx;
  width: 36rpx;
  height: 36rpx;
}

.delectIcon {
  position: absolute;
  z-index: 2;
  top: 18rpx;
  right: 20rpx;
  width: 30rpx;
  height: 30rpx;
}

/* 门店信息 */

.stores_left {
  float: left;
  width: calc(80% - 1px);
  border-right: 1px solid #e5e5e5;
}

.stores_right {
  float: right;
}

.stores_img {
  float: left;
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  background-image: url('http://gy.t.geekzj.cn/upload/picture/20180728/19641ee496c7a6a44a0281b1a368b84e.png');
  background-repeat: no-repeat;
  background-size: 100%;
}

.stores_info {
  float: left;
  width: calc(100% - 140rpx);
  margin-left: 10rpx;
}

.address {
  width: 100%;
  font-size: 32rpx;
}

.address_name {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 88%;
  float: left;
}

.downIcon {
  display: block;
  float: left;
  width: 20rpx;
  height: 20rpx;
  margin-top: 20rpx;
}

.location {
  width: 96%;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  padding-top: 10rpx;
  font-size: 26rpx;
  color: #666;
}

.location_tip {
  padding: 10rpx 30rpx;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  padding-top: 10rpx;
  font-size: 26rpx;
  color: #666;
}

.fans {
  font-size: 24rpx;
  color: #666;
  text-align: right;
}

.fans_num {
  font-size: 24rpx;
  font-weight: bold;
  color: #f3623b;
  text-align: right;
}

/* 商品列表 */

.goods_list {
  position: relative;
  background: white;
  padding: 20rpx 30rpx;
  margin-bottom: 20rpx;
}

.goods_img {
  display: block;
  width: 100%;
  height: 390rpx;
  background: #6fba2c;
  border-radius: 20rpx;
}

.hot_sale {
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  top: 20rpx;
  right: 50rpx;
}

.hot_text {
  position: absolute;
  width: 80rpx;
  height: 100rpx;
  top: 20rpx;
  right: 60rpx;
  color: white;
  font-size: 28rpx;
  text-align: center;
}

.opacity_bg {
  position: absolute;
  width: 92%;
  height: 390rpx;
  top: 20rpx;
  left: 30rpx;
  border-radius: 20rpx;
  background: rgba(0, 0, 0, 0.6);
}

.focus {
  position: absolute;
  top: 40rpx;
  left: 50rpx;
  z-index: 90;
  color: #e5e5e5;
  font-size: 26rpx;
  padding: 8rpx 16rpx;
  border-radius: 50rpx;
  background: rgba(0, 0, 0, 0.6);
}

.sale_out {
  position: absolute;
  z-index: 20;
  top: 130rpx;
  left: 50%;
  margin-left: -120rpx;
  width: 240rpx;
  height: 180rpx;
  display: block;
}

.goods_title {
  padding: 20rpx 0;
  font-size: 32rpx;
  border-bottom: 1px solid #f1f1f1;
}

.goods_details {
  position: relative;
  padding: 10rpx 0;
}

.sale_time, .buy_time {
  font-size: 26rpx;
  margin-bottom: 10rpx;
  color: #6fba2c;
}

.sale_time {
  margin-top: 20rpx;
}

.new_price {
  font-size: 36rpx;
  color: #f97a42;
}

.old_price {
  font-size: 24rpx;
  color: #666;
  text-decoration: line-through;
  margin-left: 10rpx;
}

.sale_num {
  position: absolute;
  top: 20rpx;
  right: 10rpx;
  font-size: 24rpx;
}

.add_shopcart {
  position: absolute;
  bottom: 20rpx;
  right: 10rpx;
  font-size: 26rpx;
  color: #6fba2c;
  border: 1px solid #6fba2c;
  border-radius: 50rpx;
}

.add_shopcart1 {
  position: absolute;
  bottom: 20rpx;
  right: 10rpx;
  font-size: 26rpx;
  color: #999;
  border: 1px solid #999;
  border-radius: 50rpx;
}

.buyers_list {
  position: relative;
  padding-top: 20rpx;
  border-top: 1px solid #f1f1f1;
}

.user_info {
  float: right;
  margin-right: 5rpx;
}

.header_img {
  float: left;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: white;
}

.name {
  float: right;
  max-width: 120rpx;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 20rpx;
  line-height: 42rpx;
  margin: 0 5rpx;
}

.buy_text {
  float: right;
  line-height: 42rpx;
  font-size: 16rpx;
  color: #666;
}

.addnum_text {
  float: left;
  padding: 0 12rpx;
  line-height: 46rpx;
}

.goods_num {
  animation: big 0.5s ease-out;
  float: left;
  min-width: 46rpx;
  height: 46rpx;
  font-size: 24rpx;
  line-height: 46rpx;
  text-align: center;
  border-radius: 120rpx;
  font-weight: bold;
  color: white;
  background: #6fba2c;
}


@keyframes big {
  from {
    transform: scale(1);
  }

  to {
    transform: scale(1.3);
  }
}

.formBg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  z-index: 200;
  background: rgba(0, 0, 0, 0.65);
}

.formContent {
  animation: show 2s;
  width: calc(90% - 40rpx);
  margin-left: 5%;
  margin-top: 20vh;
  border-radius: 20rpx;
  background: white;
  padding: 20rpx;
}

.formTitle {
  text-align: center;
  font-size: 40rpx;
  letter-spacing: 5rpx;
}

/* 表单 */

.inputbox {
  position: relative;
  width: 90%;
  margin-left: 5%;
  border-radius: 50px;
  border: 1px solid #ccc;
  box-shadow: 2px 2px 2px #ccc;
  margin-top: 30rpx;
  margin-bottom: 20rpx;
}

input {
  height: 80rpx;
  font-size: 32rpx;
  color: #595959;
  padding-left: 80rpx;
}

.placeholder {
  font-size: 28rpx;
  line-height: 80rpx;
  width: 340rpx;
}

.getCodeInput {
  float: left;
}

.delect {
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  left: 50%;
  margin-left: -60rpx;
  top: 20vh;
  margin-top: -120rpx;
  animation: show 2s;
}

.getCode {
  position: absolute;
  right: 10rpx;
  float: left;
  height: 60rpx;
  width: 200rpx;
  color: white;
  line-height: 60rpx;
  font-size: 28rpx;
  text-align: center;
  border-radius: 20px;
  margin-top: 10rpx;
  background: #6fba2c;
  box-shadow: 2px 2px 2px #999;
}

.submit {
  width: 90%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 36rpx;
  margin-top: 40rpx;
  margin-bottom: 20rpx;
  margin-left: 5%;
  background: #6fba2c;
  box-shadow: 2px 2px 2px #999;
  border-radius: 40px;
  color: white;
}

.regist_icon {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 20rpx;
  left: 30rpx;
}

/* 输入框选中效果 */

.currentColor {
  border: 2px solid #6fba2c;
}

@keyframes show {
  from {
    opacity: 0;
  }

  to {
    opacity: 1;
  }
}

/* 选择门店 */
.choose_shop_bg {
  width: 100%;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 400;
  background: rgba(0, 0, 0, 0.8);
}

.choose_shop_tip {
  position: fixed;
  top: 14%;
  left: 8%;
  z-index: 500;
  color: white;
}

.cancle_choose_shop {
  position: fixed;
  top: 14%;
  right: 8%;
  width: 50rpx;
  height: 50rpx;
  z-index: 500;
}

.shop_content {
  width: 90%;
  height: 60vh;
  position: fixed;
  top: 20%;
  left: 5%;
  z-index: 500;
  overflow: scroll;
}

.shop_info_box {
  position: relative;
  padding: 30rpx;
  border-top: 1px solid #e5e5e5;
  font-size: 30rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  background: white;
}

.shop_address {
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx;
}

.shop_distance {
  position: absolute;
  font-size: 30rpx;
  color: #6fba2c;
  top: 20rpx;
  right: 20rpx;
}
