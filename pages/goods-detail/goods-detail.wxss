/* pages/goods-detail/goods-detail.wxss */
page {
  height: 100%;
}
.container{
  display:flex;
  flex-direction: column;
}
.root-section1{
  width:100%;
  margin-bottom:180rpx;
  background-color:#f1f1f1; 
}

/* 选择列表 */
.choose-box{
  height:80rpx; 
  background-color:#fff;
  margin-bottom: 6rpx;
}  
.choose-list{
  float: left;
  padding: 22rpx 0;
  font-size: 32rpx;
  width: calc(100% / 3);
  text-align: center; 
}
.choose-color{
  border-bottom: 2px solid #6fba2c;
  padding:16rpx 0;
  color: #6fba2c;
}

/* -----------------------基本信息---------------- */
/* 轮播图 */
.slide-image{
  display: block;
  width: 100%;
  height: 100%;
}
/* 价格 */
.btn-green{
  width:100%;
  position: relative;
}
.btn-green image{
  width:100%;
  height:120rpx;
  display: block;
}
.goods-pricebox{
  position: absolute;
  top:0;
  left:20rpx;
  width:94%;
}
.goods-price{
  float:left;
}
.goods-currentprice{
  color:#fff;
  font-size:38rpx;
  float:left;
  height:60rpx;
  line-height: 60rpx;
  margin:30rpx 0;
}
.goods-greyprice{
  color:#fff;
  font-size:26rpx;
  text-decoration: line-through;
  float:left;
  height:60rpx;
  line-height: 65rpx;
  margin:30rpx 20rpx ;
}
/* 倒计时 */
.goods-time{
  float:right;
  font-size:28rpx;
  color:#fff;
  margin:15rpx;
}
.goods-text,.goods-endtime{
  text-align: center;
  padding:5rpx 0;
}
.goods-style{
  float:left;
}
.bg-white{
  width:10rpx;
  height:20rpx;
  padding: 0 10rpx;
  color:black;
  background: white;
  text-align: center;
  line-height: 20rpx;
  font-weight: bold;
  margin:10rpx;
}
/* 基本信息 */
.basic-info{
  position: relative;
  padding:20rpx 30rpx;
  background-color:#fff;
  border-bottom:1px solid #e5e5e5;
}
.info-name{
  font-size:36rpx;
  /* padding:10rpx 0 */
}
.info-desc{
  padding:10rpx 0;
}
.info-title{
  color:#b6b6b6;
  float:left;
  font-size:28rpx;
}
.info-btn{
  position: absolute;
  right: 30rpx;
  top: 20rpx;
  font-size:26rpx;
  color:#fff;
  background-color:#F97D47;
  padding:5rpx 10rpx;
  border-radius:20rpx;
}
.info-prepratime{
  color:#6fba2c;
  font-size:28rpx;
  padding:10rpx 0;
}
.info-picktime{
  color:#6fba2c;
  font-size:28rpx; 
  float:left;
}
.info-number{
  float:right;
  font-size:30rpx;
}
.info-style{
  color:#ED9B9B;
}


.img{
  display: block;
  width: 100%
}
/* 人 */
.buyers_list {
  position: relative;
  padding: 20rpx 30rpx;
  background: white;
  margin-bottom: 10rpx;
}

.user_info {
  float: right;
  margin-right: 5rpx;
}

.header_img {
  float: left;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: white;
}

.name {
  float: right;
  max-width: 120rpx;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 20rpx;
  line-height: 42rpx;
  margin: 0 5rpx;
}

.buy_text {
  float: right;
  line-height: 42rpx;
  font-size: 16rpx;
  color: #666;
}
/* 数量 */
.number-box{
  padding:20rpx 30rpx;
  background-color:#fff;
   /* border-bottom:1px solid #e5e5e5; */
   margin-bottom:20rpx;
}
.number-name{
  font-size:32rpx;
  float:left;
  margin-right:20rpx;
  height:60rpx;
  line-height:60rpx;
}
.cutnumber-img{
  position: absolute;
  width: 46rpx;
  height: 46rpx;
  top: 50%;
  margin-top: -23rpx;
  left: 40rpx;
}

.addnumber-img{
  position: absolute;
  width: 46rpx;
  height: 46rpx;
  top: 50%;
  margin-top: -23rpx;
  right: 40rpx;
}

.cutnumber-img image,.addnumber-img image{
  display: block;
  width: 100%;
  height: 100%;
}

.addto_cart{
  position: absolute;
  width: calc(100% - 1px);
  height: 100%;
  left: 0;
  top: 0;
  z-index: 500;
  background: white;
  color: #6fba2c;
  text-align: center;
  line-height:96rpx;
  border-right: 1px solid #e5e5e5;
}

.number-unit{
  text-align: center;
  font-size:36rpx;
  line-height:96rpx;
}
/* 商品详情 */
.goods_details{
  padding: 30rpx;
  background: white;
}
.details_title{
  height: 60rpx;
  line-height: 60rpx;
  width: 80%;
  margin: 0 auto;
  margin-bottom: 40rpx;
  border-radius: 100rpx;
  font-size: 32rpx;
  text-align: center;
  color: #333;
  background: #e7ffef;
}
.parameter_box{
  padding:20rpx 30rpx;
  border-bottom:1px solid #f1f1f1;
  font-size:26rpx;
}
.parameter_name{
  color:#808080;
  float:left;
  width:30%;
}
.parameter{
  float:left;
}


/* -----------------------购买记录---------------------- */
/* .buy-box{
  border-top:3px solid #f1f1f1;
} */
/* 人数和总量 */
.buy-all{
  text-align: center;
  font-size:28rpx;
  border-bottom:1px solid #e5e5e5;
  color:#6f6f6f;
  padding:20rpx 0;
  background-color:#fff;
}
.buy-text{
  color:#DB0711;
}
/* 购买列表 */
.buy-list{
  padding:20rpx;
  font-size:28rpx;
  background-color:#fff;
  border-bottom: 1px solid #e5e5e5;
}
.buy-img{
  width:10%;
  height:60rpx;
  float:left;
}
.buy-img image{
  width:60rpx;
  height:60rpx;
  display:block;
  border-radius:50%;
}
.buy-name{
  float:left;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  height:60rpx;
  line-height: 60rpx;
  width:30%;
}
.buy-number{
  float:left;
  height:60rpx;
  line-height: 60rpx;
  width:18%;
}
.buy-time{
  float:right;
  width:42%;
  height:60rpx;
  line-height: 60rpx;
}
/* 更多记录 */
.buy-look{
  font-size:30rpx;
  text-align: center;
  color:#DB0711;
  background-color:#F0F0F0;
  padding:20rpx;
}


/* -------底部内容 ------*/
.foot-sold{
  position: fixed;
  left:0;
  bottom:96rpx;
  background-color:#FBD9DA;
  z-index:999;
  opacity: 0.5;
  text-align: center;
  width:100%;
  padding:20rpx 0;
  font-size:30rpx;
}
.foot-box{
  position: fixed;
  left:0;
  bottom:0;
  height:96rpx;
  width:100%;
  box-shadow: -2px 0 2px #ccc
}

.getUserInfo5{
  position: fixed;
  z-index: 999;
  left:0;
  bottom:0;
  height:96rpx;
  width:100%;
}
.cart-box{
  position: relative;
  width: calc(20% - 1px);
  height: 100%;
  background-color:#fff;
  float:left;
  padding-top: 10rpx;
  border-right:1px solid #f1f1f1;
}

.totlenum{
  position: absolute;
  z-index: 100;
  top:-10rpx;
  left: 50%;
  margin-left: 10rpx;
  min-width: 40rpx;
  height: 40rpx;
  font-size: 24rpx;
  line-height: 40rpx;
  text-align: center;
  background: white;
  border-radius: 120rpx;
  color: #6fba2c;
  font-weight: bold;
  border: 1px solid #6fba2c; 
}

.cart-box image{
  width:44rpx;
  height:44rpx;
  display: block;
  margin:0 auto;
  /* border-right:1px solid #f1f1f1; */
}
.img-text{
  font-size:26rpx;
  color:#808080;
  text-align: center;
}
.add-box{
  position: relative;
  background-color:#fff;
  color:#6fba2c;
  text-align: center;
  font-size:30rpx;
  width: 40%;
  height: 100%;
  float:left;
}

.charse-box{
  background-color:#6fba2c;
  color:#fff;
  text-align: center;
  font-size:30rpx;
  width: 40%;
  height: 100%;
  float:left;
  line-height: 96rpx;
}

.formBg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  z-index: 200;
  background: rgba(0, 0, 0, 0.65);
}

.formContent {
  animation: show 2s;
  width: calc(90% - 40rpx);
  margin-left: 5%;
  margin-top: 20vh;
  border-radius: 20rpx;
  background: white;
  padding: 20rpx;
}

.formTitle {
  text-align: center;
  font-size: 40rpx;
  letter-spacing: 5rpx;
}

/* 表单 */

.inputbox {
  position: relative;
  width: 90%;
  margin-left: 5%;
  border-radius: 50px;
  border: 1px solid #ccc;
  box-shadow: 2px 2px 2px #ccc;
  margin-top: 30rpx;
  margin-bottom: 20rpx;
}

input {
  height: 80rpx;
  font-size: 32rpx;
  color: #595959;
  padding-left: 80rpx;
}

.placeholder {
  font-size: 28rpx;
  line-height: 80rpx;
  width: 340rpx;
}

.getCodeInput {
  float: left;
}

.delect {
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  left: 50%;
  margin-left: -60rpx;
  top: 20vh;
  margin-top: -120rpx;
  animation: show 2s;
}

.getCode {
  position: absolute;
  right: 10rpx;
  float: left;
  height: 60rpx;
  width: 200rpx;
  color: white;
  line-height: 60rpx;
  font-size: 28rpx;
  text-align: center;
  border-radius: 20px;
  margin-top: 10rpx;
  background: #2fc741;
  box-shadow: 2px 2px 2px #999;
}

.submit {
  width: 90%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 36rpx;
  margin-top: 40rpx;
  margin-bottom: 20rpx;
  margin-left: 5%;
  background: linear-gradient(to right, #6dda9b, #54d761);
  box-shadow: 2px 2px 2px #999;
  border-radius: 40px;
  color: white;
}

.regist_icon {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 20rpx;
  left: 30rpx;
}

/* 输入框选中效果 */

.currentColor {
  border: 2px solid #12c540;
}