/* pages/shoppingcart/shoppingcart.wxss */
/* 右边列表 */
page{
  background: #f1f1f1;
  padding-bottom: 220rpx;
}
   .listBox{
    background: white;
  } 
  .left_nav{
    position: relative;
    text-align: center;
    margin-top: 80rpx;
    width: 15%;
    float: left;
  }

  .left_nav image{
    position: absolute;
    width: 48rpx;
    height: 48rpx;
    left: 30rpx;
    top: 50%;
  }

  .right_nav{
    border-top: 1px solid #e5e5e5;
    float: left;
    width: 85%;
  }

  .right_list{
    width: calc(100% - 20rpx);
    padding-right:20rpx;
  }

  .goodsimg{
    float: left;
    margin-top: 50rpx;
    width: 140rpx;
    height: 140rpx;
    margin-right: 20rpx;
    border-radius: 50%;
  }

  .right_content{
    position: relative;
    float: left;
    width: calc(100% - 160rpx);
    padding:20rpx 0;
  }

  .right_title,.right_describe{
    font-size: 32rpx;
    display:-webkit-box;
    word-break: break-all;
    -webkit-box-orient:vertical;
    -webkit-line-clamp:1;
    overflow: hidden;
    text-overflow:ellipsis;
  }

  .right_describe{
    font-size: 30rpx;
    margin-top: 5rpx;
    color: #666;
  }

  .moneybox{
    margin-top: 50rpx;
  }

  .newmoney{
    color: #F97A42;
    font-size: 32rpx;
  }

  /* .oldmoney{
    color: #666;
    font-size: 24rpx;
    margin-left: 10rpx;
    text-decoration: line-through;
  } */

  .oldmoney{
    color: #F97A42;
    font-size: 28rpx;
    margin-left: 10rpx;
  }

  .cut{
    position: absolute;
    width: 52rpx;
    height: 52rpx;
    right: 140rpx;
    bottom: 20rpx;
  }

  .add{
    position: absolute;
    width: 52rpx;
    height: 52rpx;
    right: 20rpx;
    bottom: 20rpx;
  }

  .num{
    position: absolute;
    width: 70rpx;
    height: 52rpx;
    right: 70rpx;
    bottom: 20rpx;
    font-size: 36rpx;
    line-height: 52rpx;
    text-align: center;
  }

/* 结算 */
.buybox{
  width: 100%;
  height: 100rpx;
  position: fixed;
  left: 0;
  bottom: 120rpx;
  background: white;
  box-shadow: -1px -1px 2px #ccc;
}

.chooseall{
  float: left;
  line-height: 100rpx;
}

.chooseall icon{
  float: left;
  margin-left:20rpx;
  margin-right: 10rpx;
  margin-top: 24rpx;
}

.chooseall text{
  float: left;
  font-size: 32rpx;
  margin-top: 2rpx;
  line-height: 100rpx;
}

.right{
  float: right;
  height: 100rpx;
  width: 250rpx;
  color: white;
  font-size: 32rpx;
  line-height: 100rpx;
  text-align: center;
  background: #6fba2c
}

.center{
  float: right;
  margin-right: 20rpx;
  line-height: 100rpx;
}

.totle_money{
  font-size: 30rpx;
  color: #333;
}

.cunt_money{
  text-align: right;
  font-size: 24rpx;
  color: #333;
}